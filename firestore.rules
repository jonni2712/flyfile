rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isTeamMember(teamId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/teamMembers/$(request.auth.uid + '_' + teamId));
    }

    function isTeamOwner(teamId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Transfers collection
    match /transfers/{transferId} {
      // Anyone can read transfers (for download page)
      allow read: if true;

      // Anyone can create transfers (supports anonymous uploads)
      allow create: if true;

      // Only owner can update/delete (authenticated users only)
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;

      // Files subcollection
      match /files/{fileId} {
        allow read: if true;
        // Anyone can create files in transfers (supports anonymous uploads)
        allow create: if true;
        allow update, delete: if isAuthenticated() &&
          get(/databases/$(database)/documents/transfers/$(transferId)).data.userId == request.auth.uid;
      }
    }

    // Files collection (standalone files)
    match /files/{fileId} {
      allow read: if true;
      // Anyone can create files (supports anonymous uploads)
      allow create: if true;
      // SECURITY FIX: Only authenticated owner can update
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Only authenticated owner can delete
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Teams collection
    match /teams/{teamId} {
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        isTeamMember(teamId)
      );
      allow create: if isAuthenticated();
      allow update: if isTeamOwner(teamId);
      allow delete: if isTeamOwner(teamId);
    }

    // Team Members collection - SECURITY: Server-side operations only via Admin SDK
    match /teamMembers/{memberId} {
      // Read: Only team owner or the member themselves
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isTeamOwner(resource.data.teamId)
      );
      // Create: Server-only (via invitation acceptance or team creation)
      allow create: if false;
      // Update: Only team owner can update member roles
      allow update: if isAuthenticated() && isTeamOwner(resource.data.teamId);
      // Delete: User can leave, or team owner can remove
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isTeamOwner(resource.data.teamId)
      );
    }

    // Team Invitations collection - SECURITY: Server-side operations via Admin SDK
    match /teamInvitations/{invitationId} {
      // Only invitee (by email) or team owner can read
      allow read: if isAuthenticated() && (
        request.auth.token.email == resource.data.email ||
        isTeamOwner(resource.data.teamId)
      );
      // Create: Server-only (team owner sends via API)
      allow create: if false;
      // Update: Server-only (invitation acceptance via API)
      allow update: if false;
      // Delete: Only team owner can revoke invitations
      allow delete: if isAuthenticated() &&
        isTeamOwner(resource.data.teamId);
    }

    // Anonymous Users collection
    match /anonymousUsers/{anonId} {
      // SECURITY FIX: No client reads - only server-side via Admin SDK
      allow read: if false;
      // Allow creation for anonymous uploads
      allow create: if true;
      // SECURITY FIX: No client updates - only server-side
      allow update: if false;
      allow delete: if false;
    }

    // Transfer Downloads (analytics)
    match /transferDownloads/{downloadId} {
      allow read: if isAuthenticated();
      allow create: if true;
    }

    // API Keys collection - SECURITY: Only owner can access their keys
    match /apiKeys/{keyId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Webhooks collection - SECURITY: Only owner can access their webhooks
    match /webhooks/{webhookId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Processed Stripe Events - SECURITY: Admin SDK only (for idempotency)
    match /processedStripeEvents/{eventId} {
      allow read, write: if false;
    }

    // Contact Messages - SECURITY: Admin SDK only (server-side operations)
    match /contact_messages/{messageId} {
      allow read, write: if false;
    }
  }
}
